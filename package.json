{
  "name": "@peersahab/side-island",
  "version": "0.1.0",
  "description": "A Skia-powered quick access island overlay for React Native with built-in virtualized content.",
  "license": "MIT",
  "keywords": [
    "react-native",
    "skia",
    "ui",
    "overlay",
    "island",
    "quick-access"
  ],
  "repository": {
