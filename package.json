    },
    "react-native-reanimated": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-native": "^0.72.0",
    "@shopify/react-native-skia": "^2.4.14",
    "rimraf": "^6.0.1",
    "react-native": "^0.83.1",
    "react-native-reanimated": "^3.17.5",
